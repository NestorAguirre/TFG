<MenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        canvas.before:
            Color:
                rgba: 0.98, 0.95, 0.88, 1
            Rectangle:
                pos: self.pos
                size: self.size

        RelativeLayout:
            size_hint_y: 0.12

            Label:
                text: "PriceList"
                font_size: app.title_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                size_hint: 1, 1
                canvas.before:
                    Color:
                        rgba: 0.73, 0.37, 0.27, 1
                    Rectangle:
                        size: self.width, dp(4)
                        pos: self.x, self.y - dp(5)

            MDRaisedButton:
                text: "ðŸ—‘"
                tooltip_text: "Vaciar base de datos"
                font_size: dp(16)
                size_hint: None, None
                size: dp(40), dp(40)
                pos_hint: {"right": 1, "center_y": 0.5}
                md_bg_color: 1, 0.4, 0.4, 1
                text_color: 1, 1, 1, 1
                on_release: app.vaciar_base_de_datos()

        GridLayout:
            cols: 2
            spacing: dp(20)
            padding: dp(20)
            size_hint_y: 0.8

            Button:
                text: "Frescos"
                font_size: app.button_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                background_color: 0.25, 0.65, 0.45, 0.3
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                canvas.before:
                    Color:
                        rgba: self.background_color
                on_release: app.cambiar_pantalla('frescos')

            Button:
                text: "Envasados"
                font_size: app.button_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                background_color: 0.8, 0.5, 0.3, 0.3
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                canvas.before:
                    Color:
                        rgba: self.background_color
                on_release: app.cambiar_pantalla('envasados')

            Button:
                text: "Congelados"
                font_size: app.button_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                background_color: 0.3, 0.4, 0.8, 0.3
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                canvas.before:
                    Color:
                        rgba: self.background_color
                on_release: app.cambiar_pantalla('congelados')

            Button:
                text: "Bebidas"
                font_size: app.button_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                background_color: 0.8, 0.3, 0.4, 0.3
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                canvas.before:
                    Color:
                        rgba: self.background_color
                on_release: app.cambiar_pantalla('bebidas')

            Button:
                text: "Cuidado personal"
                font_size: app.button_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                background_color: 0.6, 0.3, 0.8, 0.3
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                canvas.before:
                    Color:
                        rgba: self.background_color
                on_release: app.cambiar_pantalla('cuidadopersonal')

            Button:
                text: "Limpieza"
                font_size: app.button_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                background_normal: ''
                background_color: 0.85, 0.65, 0.2, 0.3
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                canvas.before:
                    Color:
                        rgba: self.background_color
                on_release: app.cambiar_pantalla('limpieza')

        Button:
            text: "Importar Ticket"
            font_size: app.button_font_size
            bold: True
            size_hint_y: None
            height: dp(60)
            background_normal: ''
            background_color: 0.73, 0.37, 0.27, 1
            color: 1, 1, 1, 1 
            font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
            canvas.before:
                Color:
                    rgba: 0.35, 0.7, 0.5, 1
            on_release: app.abrir_filechooser()
