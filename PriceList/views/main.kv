<MenuScreen>:
    MDScreen:
        md_bg_color: 0.98, 0.95, 0.88, 1
        
        BoxLayout:
            orientation: 'vertical'
            padding: dp(20)
            spacing: dp(20)

            RelativeLayout:
                size_hint_y: 0.12

                # Botón de menú
                MDIconButton:
                    icon: "menu"
                    pos_hint: {'x': 0, 'center_y': 0.5}
                    on_release: nav_drawer.set_state("open")
                    theme_text_color: "Custom"
                    text_color: 0.2, 0.2, 0.2, 1

                Label:
                    text: "PriceList"
                    font_size: app.title_font_size
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    halign: 'center'
                    valign: 'middle'
                    font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                    size_hint: 1, 1
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    canvas.before:
                        Color:
                            rgba: 0.73, 0.37, 0.27, 1
                        Rectangle:
                            size: self.width, dp(4)
                            pos: self.x, self.y - dp(5)

            # Contenido principal
            GridLayout:
                cols: 2
                spacing: dp(20)
                padding: dp(20)
                size_hint_y: 0.8

                Button:
                    text: "Frescos"
                    font_size: app.button_font_size
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    background_normal: ''
                    background_color: 0.25, 0.65, 0.45, 0.3
                    font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                    canvas.before:
                        Color:
                            rgba: self.background_color
                    on_release: app.cambiar_pantalla('frescos')

                Button:
                    text: "Envasados"
                    font_size: app.button_font_size
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    background_normal: ''
                    background_color: 0.8, 0.5, 0.3, 0.3
                    font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                    canvas.before:
                        Color:
                            rgba: self.background_color
                    on_release: app.cambiar_pantalla('envasados')

                Button:
                    text: "Congelados"
                    font_size: app.button_font_size
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    background_normal: ''
                    background_color: 0.3, 0.4, 0.8, 0.3
                    font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                    canvas.before:
                        Color:
                            rgba: self.background_color
                    on_release: app.cambiar_pantalla('congelados')

                Button:
                    text: "Bebidas"
                    font_size: app.button_font_size
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    background_normal: ''
                    background_color: 0.8, 0.3, 0.4, 0.3
                    font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                    canvas.before:
                        Color:
                            rgba: self.background_color
                    on_release: app.cambiar_pantalla('bebidas')

                Button:
                    text: "Cuidado personal"
                    font_size: app.button_font_size
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    background_normal: ''
                    background_color: 0.6, 0.3, 0.8, 0.3
                    font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                    canvas.before:
                        Color:
                            rgba: self.background_color
                    on_release: app.cambiar_pantalla('cuidadopersonal')

                Button:
                    text: "Limpieza"
                    font_size: app.button_font_size
                    bold: True
                    color: 0.2, 0.2, 0.2, 1
                    background_normal: ''
                    background_color: 0.85, 0.65, 0.2, 0.3
                    font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                    canvas.before:
                        Color:
                            rgba: self.background_color
                    on_release: app.cambiar_pantalla('limpieza')

            Button:
                text: "Importar Ticket"
                font_size: app.button_font_size
                bold: True
                size_hint_y: None
                height: dp(60)
                background_normal: ''
                background_color: 0.73, 0.37, 0.27, 1
                color: 1, 1, 1, 1 
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                on_release: app.abrir_filechooser()

        # Menú de navegación
        MDNavigationDrawer:
            id: nav_drawer
            anchor: "left"
            md_bg_color: 0.90, 0.85, 0.75, 1
            
            ScrollView:
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    pos_hint: {'top': 1}
                    
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: None
                        height: self.minimum_height
                        padding: '20dp'
                        spacing: '12dp'

                        MDLabel:
                            text: "Menú"
                            font_style: "H6"
                            halign: "center"
                            size_hint_y: None
                            height: self.texture_size[1]
                            theme_text_color: "Custom"
                            text_color: 0.2, 0.2, 0.2, 1
                            font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
                            font_size: app.button_font_size

                        Widget:
                            size_hint_y: None
                            height: dp(20)
                            
                        #OPCIONES DEL MENÚ
                        OneLineIconListItem:
                            text: "Ver todos los productos"
                            IconLeftWidget:
                                icon: "star"
                    
                    # Widget espaciador que empuja todo hacia arriba
                    Widget:
                        size_hint_y: None
                        height: root.height - self.parent.children[0].height