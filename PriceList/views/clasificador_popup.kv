<ClasificadorPopupLayout@BoxLayout>:
    orientation: 'vertical'
    spacing: '8dp'
    padding: ['20dp', '20dp', '20dp', '20dp']
    size_hint_y: None
    height: '160dp'
    adaptive_height: False

    MDLabel:
        id: producto_label
        text: "Producto:"
        font_style: "Subtitle1"
        font_size: app.title_font_size
        bold: True
        size_hint_y: None
        height: '40dp'
        theme_text_color: "Primary"
        halign: "left"
        
    MDSeparator:
        height: '1dp'
        size_hint_y: None
        
    GridLayout:
        cols: 1
        size_hint_y: None
        height: '80dp'
        spacing: '8dp'
        padding: ['0dp', '10dp', '0dp', '10dp']
            
        MDFillRoundFlatButton:
            id: button_select
            text: "Seleccionar familia"
            size_hint: None, None
            font_size: app.button_font_size
            size: '240dp', '48dp'
            pos_hint: {'center_x': 0.5}
            md_bg_color: app.theme_cls.primary_color
            text_color: [1, 1, 1, 1]
            on_release: app.clasificador_popup.abrir_menu(self)