<ListadoProductosGeneralScreen>:
    canvas:
        Color:
            rgba: 0.98, 0.95, 0.88, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        RelativeLayout:
            size_hint_y: 0.12

            canvas.before:
                Color:
                    rgba: 0.73, 0.37, 0.27, 1
                Rectangle:
                    size: self.width, dp(4)
                    pos: self.x, self.y - dp(5)

            # Botón Volver (izquierda)
            RelativeLayout:
                size_hint: None, None
                size: dp(40), dp(40)
                pos: dp(4), self.height - dp(25)

                Button:
                    size: dp(40), dp(40)
                    pos: 0, 0
                    background_normal: ''
                    background_color: 0, 0, 0, 0
                    on_release: app.volver_atras()

                Image:
                    source: 'assets/images/botones/btnatras.png'
                    size_hint: None, None
                    size: dp(24), dp(24)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            # Botón Guardar (derecha)
            RelativeLayout:
                size_hint: None, None
                size: dp(40), dp(40)
                pos: root.width - dp(80), self.height - dp(25)

                Button:
                    id: btn_guardar
                    size: dp(40), dp(40)
                    pos: 0, 0
                    background_normal: ''
                    background_color: 0, 0, 0, 0
                    on_release: app.guardar_productos_generales()

                MDIcon:
                    icon: "content-save"
                    size_hint: None, None
                    size: dp(24), dp(24)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: "Listado de productos"
                font_size: app.title_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(2)
            size_hint_y: 0.78
           
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                height: app.row_height * 0.7
                spacing: dp(2)
                padding: dp(10)
               
                Label:
                    text: "Producto"
                    bold: True
                    font_size: app.label_font_size
                    font_name: "assets/fonts/Lato-Bold.ttf"
                    color: 0.2, 0.2, 0.2, 1
                    size_hint_x: 0.2
                    halign: 'left'
                    padding: [dp(10), 0]
                    canvas.before:
                        Color:
                            rgba: 0.93, 0.93, 0.93, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

                Label:
                    text: "Familia"
                    bold: True
                    font_size: app.label_font_size
                    font_name: "assets/fonts/Lato-Bold.ttf"
                    color: 0.2, 0.2, 0.2, 1
                    size_hint_x: 0.2
                    canvas.before:
                        Color:
                            rgba: 0.93, 0.93, 0.93, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size

            RecycleView:
                id: rv_general
                viewclass: 'ProductosGeneralesRecyclerView'
                bar_width: dp(10)
                bar_color: 0.73, 0.37, 0.27, 1
                scroll_type: ['bars', 'content']
               
                RecycleBoxLayout:
                    orientation: 'vertical'
                    default_size: None, app.row_height * 0.7
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(2)

<ProductosGeneralesRecyclerView>:
    producto: ""
    familia: ""
   
    orientation: 'horizontal'
    spacing: dp(2)
    size_hint_y: None
    height: app.row_height * 0.7
   
    Label:
        text: root.producto
        text_size: self.size
        halign: 'center'
        valign: 'middle'
        padding: (dp(10), 0)
        color: 0.2, 0.2, 0.2, 1
        font_size: app.label_font_size
        size_hint_x: 0.2
        font_name: "assets/fonts/Lato-Regular.ttf"
        canvas.before:
            Color:
                rgba: 0.98, 0.98, 0.98, 1
            Rectangle:
                pos: self.pos
                size: self.size

    Spinner:
        id: spinner_familia
        text: root.familia
        values: ["Frutas","Verduras","Carnes","Pescados","Mariscos","Embutidos","Yogures y postres","Leche y derivados","Quesos","Huevos","Arroz, pastas y legumbres","Conservas","Aceites y vinagres","Snacks","Alimentos preparados","Bolleria","Pan","Cereales","Otros (Desayuno)","Congelados de carne","Congelado de pescado","Congelados de verduras","Postres congelados","Otros congelados","Bebidas no alcohólicas","Bebidas alcohólicas","Cosmética","Higiene","Limpieza del hogar","Productos de cocina"]
        size_hint_x: 0.2
        font_size: app.label_font_size
        font_name: "assets/fonts/Lato-Regular.ttf"

        color: 0.2, 0.2, 0.2, 1
        background_normal: ''
        background_color: 1, 1, 1, 1

        on_text:
            root.familia = self.text
            app.actualizar_familia(root.producto, self.text)