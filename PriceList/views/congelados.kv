<CongeladosScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        
        canvas.before:
            Color:
                rgba: 0.98, 0.95, 0.88, 1  # Fondo crema claro (#FAF3E0)
            Rectangle:
                size: self.size
                pos: self.pos

        RelativeLayout:
            size_hint_y: 0.12

            canvas.before:
                Color:
                    rgba: 0.73, 0.37, 0.27, 1  # Línea terracota
                Rectangle:
                    size: self.width, dp(4)
                    pos: self.x, self.y - dp(5)

            # Botón de retroceso con imagen superpuesta
            RelativeLayout:
                size_hint: None, None
                size: dp(40), dp(40)
                pos: dp(4), self.height - dp(25)

                Button:
                    size: dp(40), dp(40)
                    pos: 0, 0
                    background_normal: ''
                    background_color: 0, 0, 0, 0
                    on_release: app.volver_atras()

                Image:
                    source: 'assets/images/botones/btnatras.png'
                    size_hint: None, None
                    size: dp(24), dp(24)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: "Congelados"
                font_size: app.title_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            padding: dp(10)
            size_hint_y: 0.8

            # Primera fila
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(20)

                # Botón Carne
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.25, 0.65, 0.45, 0.3
                        on_release:
                            app.familia('Carnes')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Carne"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

                # Botón Pescado
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.8, 0.5, 0.3, 0.3
                        on_release:
                            app.familia('Congelado de pescado')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Pescado y marisco"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

            # Segunda fila
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(20)

                # Botón Verduras
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.3, 0.4, 0.8, 0.3
                        on_release:
                            app.familia('Congelados de verduras')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Verduras"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

                # Botón Postres
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.8, 0.3, 0.4, 0.3
                        on_release:
                            app.familia('Postres congelados')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Postres"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

            # Tercera fila
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(20)

                # Botón Otros
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.6, 0.3, 0.8, 0.3
                        on_release:
                            app.familia('Otros congelados')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Otros"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

                # Espacio vacío
                Widget:
                    size_hint_x: 0.5
