<EnvasadosScreen>:
    canvas:
        Color:
            rgba: 0.98, 0.98, 0.98, 1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)
        
        canvas.before:
            Color:
                rgba: 0.98, 0.95, 0.88, 1  # Fondo crema claro (#FAF3E0)
            Rectangle:
                size: self.size
                pos: self.pos

        RelativeLayout:
            size_hint_y: 0.12

            canvas.before:
                Color:
                    rgba: 0.73, 0.37, 0.27, 1  # Línea terracota
                Rectangle:
                    size: self.width, dp(4)
                    pos: self.x, self.y - dp(5)

            # Botón de retroceso con imagen superpuesta
            RelativeLayout:
                size_hint: None, None
                size: dp(40), dp(40)
                pos: dp(4), self.height - dp(25)

                Button:
                    size: dp(40), dp(40)
                    pos: 0, 0
                    background_normal: ''
                    background_color: 0, 0, 0, 0
                    on_release: app.volver_atras()

                Image:
                    source: 'assets/images/botones/btnatras.png'
                    size_hint: None, None
                    size: dp(24), dp(24)
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            Label:
                text: "Envasados"
                font_size: app.title_font_size
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'center'
                valign: 'middle'
                font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

        BoxLayout:
            orientation: 'vertical'
            spacing: dp(20)
            padding: dp(10)
            size_hint_y: 0.8

            # Primera fila
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(20)

                # Botón Arroz, pastas y legumbres
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.25, 0.65, 0.45, 0.3
                        on_release:
                            app.familia('Arroz, pastas y legumbres')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Arroz, pastas y legumbres"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

                # Botón Conservas
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.8, 0.5, 0.3, 0.3
                        on_release:
                            app.familia('Conservas')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Conservas"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

            # Segunda fila
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(20)

                # Botón Aceite y vinagre
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.3, 0.4, 0.8, 0.3
                        on_release:
                            app.familia('Aceites y vinagres')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Aceites y vinagres"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

                # Botón Snacks
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.8, 0.3, 0.4, 0.3
                        on_release:
                            app.familia('Snacks')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Snacks"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

            # Tercera fila
            BoxLayout:
                orientation: 'horizontal'
                spacing: dp(20)

                # Botón Alimentos preparados
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.6, 0.3, 0.8, 0.3
                        on_release:
                            app.familia('Alimentos preparados')
                            app.cambiar_pantalla('listadoproductos')
                    
                    Label:
                        text: "Alimentos preparados"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"

                # Botón Desayuno
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: 0.5
                    size_hint_y: None
                    height: 1.25 * self.width
                    
                    Button:
                        size_hint_y: 0.8
                        background_normal: ''
                        background_color: 0.8, 0.3, 0.4, 0.3
                        on_release:
                            app.on_button_press("Desayuno")
                    
                    Label:
                        text: "Desayuno"
                        font_size: app.label_font_size
                        bold: True
                        size_hint_y: 0.2
                        color: 0.2, 0.2, 0.2, 1
                        halign: 'center'
                        valign: 'middle'
                        font_name: "assets/fonts/DancingScript-VariableFont_wght.ttf"
